{
  "name": "zeit.web",
  "version": "0.4.3",
  "description": "zeit web component",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "grunt": "~1.0.1",
    "grunt-cli": "~1.2.0",
    "bower": "^1.8.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "bower-files": "^3.14.1",
    "eslint": "^3.18.0",
    "eslint-config-jquery": "^1.0.1",
    "eslint-config-standard": "^7.1.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^2.1.1",
    "grunt-auto-install": "^0.3.1",
    "grunt-contrib-clean": "^1.0.0",
    "grunt-contrib-copy": "~1.0.0",
    "grunt-contrib-jshint": "~1.1.0",
    "grunt-contrib-requirejs": "~1.0.0",
    "grunt-contrib-watch": "~1.0.0",
    "grunt-eslint": "^19.0.0",
    "grunt-jsdoc": "~2.1.0",
    "grunt-modernizr-builder": "^0.1.9",
    "grunt-newer": "^1.2.0",
    "grunt-postcss": "^0.8.0",
    "grunt-sass": "^2.0.0",
    "grunt-sftp-deploy": "~0.2.5",
    "grunt-svgmin": "^4.0.0",
    "grunt-svgstore": "^1.0.0",
    "jshint": "^2.9.4",
    "livereload": "^0.6.2",
    "main-bower-files": "^2.13.1",
    "modernizr": "^3.4.0",
    "node-sass": "^4.5.2",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "postcss-cli": "^3.0.0",
    "requirejs": "^2.3.3",
    "svg-sprite": "^1.3.6",
    "svgo": "^0.7.2"
  },
  "scripts": {
    "prebower": "bower prune",
    "bower": "bower install --production",
    "postbower": "mkdir -p javascript/vendor && bower-files js | xargs -I % cp % javascript/vendor",
    "clean:css": "rm -rf src/zeit/web/static/css",
    "clean:js": "rm -rf src/zeit/web/static/js",
    "clean:scripts": "rm -rf javascript/vendor",
    "clean": "npm-run-all --parallel clean:*",
    "modernizr": "modernizr -c modernizr-config.json -d javascript/vendor/modernizr-custom.js",
    "jshint": "jshint javascript --exclude javascript/vendor",
    "eslint": "eslint javascript --ignore-pattern javascript/vendor --fix",
    "lint": "npm run jshint --silent & npm run eslint --silent",
    "livereload": "livereload 'src/zeit/web/static/css, src/zeit/web/static/js' -d",
    "postcss": "postcss -u autoprefixer -r 'src/zeit/web/static/css/**/!(all-old-ie).css'",
    "sass": "node-sass --include-path sass --include-path bower_components sass/ -o src/zeit/web/static/css/",
    "sass:dev": "npm run sass -- --output-style expanded --source-map true --source-map-root file://${PWD}/src/zeit/web/static/css/web",
    "sass:dist": "npm run sass -- --output-style compressed",
    "postsass:dev": "npm run postcss",
    "postsass:dist": "npm run postcss -- --no-map",
    "watch:livereload": "npm run livereload",
    "watch:svg": "nodemon --watch sass --ext svg -C --exec 'npm run svg'",
    "watch:js": "nodemon --watch javascript --ext js --ignore javascript/vendor/ -C --exec 'npm run lint && npm run js:dev'",
    "watch:sass": "npm run sass:dev -- -w",
    "xatch:postcss": "npm run postcss -- -w",
    "watch": "npm-run-all --parallel --silent watch:*",
    "svgo:campus": "svgo -q --config=svgo.json -f sass/web.campus/svg -o src/zeit/web/static/css/svg/web.campus",
    "svgo:magazin": "svgo -q --config=svgo.json -f sass/web.magazin/svg -o src/zeit/web/static/css/svg/web.magazin",
    "svgo:site": "svgo -q --config=svgo.json -f sass/web.site/svg -o src/zeit/web/static/css/svg/web.site",
    "svg:sprite:amp:campus": "npm run svg:sprite -- --symbol-sprite 'web.campus/amp.svg' 'sass/web.campus/svg-amp/*.svg'",
    "svg:sprite:amp:magazin": "npm run svg:sprite -- --symbol-sprite 'web.magazin/amp.svg' 'sass/web.magazin/svg-amp/*.svg'",
    "svg:sprite:amp:site": "npm run svg:sprite -- --symbol-sprite 'web.site/amp.svg' 'sass/web.site/svg-amp/*.svg'",
    "svg:sprite:framebuilder:campus": "npm run svg:sprite -- --symbol-sprite 'web.campus/framebuilder.svg' 'sass/web.campus/svg-framebuilder/*.svg'",
    "svg:sprite:framebuilder:site": "npm run svg:sprite -- --symbol-sprite 'web.site/framebuilder.svg' 'sass/web.site/svg-framebuilder/*.svg'",
    "svg:sprite": "svg-sprite --svg-doctype false --dest src/zeit/web/static/css --shape-id-generator 'svg-%s' --shape-transform-svgo svgo.json --symbol --symbol-dest ''",
    "svg": "npm-run-all --parallel svgo:* svg:sprite:*:*",
    "prejs": "npm run lint",
    "js:dev": "npm run js -- useSourceUrl=true optimize=none",
    "js": "r.js -o javascript/build.json",
    "prebuild": "npm run clean",
    "build": "NODE_ENV=production npm-run-all bower --parallel modernizr sass:dist js svg",
    "postinstall": "npm prune"
  },
  "browserslist": [
    "Chrome >= 35",
    "Firefox >= 30",
    "Edge >= 12",
    "Explorer >= 9",
    "iOS >= 7",
    "Safari >= 8",
    "Android 2.3",
    "Android >= 4",
    "Opera >= 12"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ZeitOnline/zeit.web.git"
  }
}
