{
  "name": "zeit.web",
  "version": "0.5.0",
  "description": "zeit web component",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "es6-promise": "^4.1.0",
    "eslint": "^3.18.0",
    "eslint-config-jquery": "^1.0.1",
    "eslint-config-standard": "^10.2.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "exports-loader": "^0.6.4",
    "expose-loader": "^0.7.3",
    "imports-loader": "^0.7.1",
    "jquery": "^1.12.4",
    "jquery-inview": "^1.1.2",
    "jshint": "^2.9.4",
    "livereload": "^0.6.2",
    "masonry-layout": "^4.1.1",
    "modernizr": "^3.4.0",
    "node-sass": "^4.5.2",
    "nodemon": "^1.11.0",
    "normalize.css": "^6.0.0",
    "npm-run-all": "^4.0.2",
    "picturefill": "^3.0.2",
    "postcss-cli": "^3.0.0",
    "requirejs": "^2.3.3",
    "script-loader": "^0.7.0",
    "svg-sprite": "^1.3.6",
    "svgo": "^0.7.2",
    "velocity-animate": "^1.4.3",
    "webpack": "^2.2.1"
  },
  "scripts": {
    "clean:legacy": "rm -rf javascript/vendor",
    "clean:css": "rm -rf src/zeit/web/static/css",
    "clean:js": "rm -rf src/zeit/web/static/js",
    "clean": "npm-run-all --parallel clean:*",
    "modernizr": "modernizr -c modernizr-config.json -d src/zeit/web/static/js/vendor/modernizr-custom.js --quiet",
    "jshint": "jshint javascript",
    "eslint": "eslint javascript --fix",
    "lint": "npm run jshint --silent & npm run eslint --silent",
    "livereload": "livereload 'src/zeit/web/static/css, src/zeit/web/static/js' -d",
    "postcss": "postcss -u autoprefixer -r 'src/zeit/web/static/css/**/!(all-old-ie).css'",
    "sass": "node-sass --include-path sass --include-path node_modules sass/ -o src/zeit/web/static/css/",
    "sass:dev": "npm run sass -- --output-style expanded --source-map true --source-map-root file://${PWD}/src/zeit/web/static/css/web",
    "sass:dist": "npm run sass -- --output-style compressed --quiet",
    "postsass:dev": "npm run postcss",
    "postsass:dist": "npm run postcss -- --no-map",
    "watch:livereload": "npm run livereload",
    "watch:svg": "nodemon --watch sass --ext svg -C --exec 'npm run svg'",
    "watch:js": "npm run webpack -- --watch",
    "watch:sass": "npm run sass:dev -- -w",
    "xatch:postcss": "npm run postcss -- -w",
    "watch": "npm-run-all --parallel --silent watch:*",
    "svgo:campus": "svgo -q --config=svgo.json -f sass/web.campus/svg -o src/zeit/web/static/css/svg/web.campus",
    "svgo:magazin": "svgo -q --config=svgo.json -f sass/web.magazin/svg -o src/zeit/web/static/css/svg/web.magazin",
    "svgo:site": "svgo -q --config=svgo.json -f sass/web.site/svg -o src/zeit/web/static/css/svg/web.site",
    "svg:sprite:amp:campus": "npm run svg:sprite -- --symbol-sprite 'web.campus/amp.svg' 'sass/web.campus/svg-amp/*.svg'",
    "svg:sprite:amp:magazin": "npm run svg:sprite -- --symbol-sprite 'web.magazin/amp.svg' 'sass/web.magazin/svg-amp/*.svg'",
    "svg:sprite:amp:site": "npm run svg:sprite -- --symbol-sprite 'web.site/amp.svg' 'sass/web.site/svg-amp/*.svg'",
    "svg:sprite:framebuilder:campus": "npm run svg:sprite -- --symbol-sprite 'web.campus/framebuilder.svg' 'sass/web.campus/svg-framebuilder/*.svg'",
    "svg:sprite:framebuilder:site": "npm run svg:sprite -- --symbol-sprite 'web.site/framebuilder.svg' 'sass/web.site/svg-framebuilder/*.svg'",
    "svg:sprite": "svg-sprite --config svg-sprite.json --shape-transform-svgo svgo.json",
    "svg": "npm-run-all --parallel svgo:* svg:sprite:*:*",
    "prejs": "npm run lint",
    "js": "npm run webpack:dist",
    "webpack": "webpack",
    "webpack:dist": "webpack -p",
    "webpack:dev": "webpack -d --debug --display-modules",
    "prebuild": "npm run clean",
    "build": "NODE_ENV=production npm-run-all --parallel modernizr sass:dist js svg",
    "preinstall": "npm prune"
  },
  "browserslist": [
    "Chrome >= 35",
    "Firefox >= 30",
    "Edge >= 12",
    "Explorer >= 9",
    "iOS >= 7",
    "Safari >= 8",
    "Android 2.3",
    "Android >= 4",
    "Opera >= 12"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ZeitOnline/zeit.web.git"
  }
}
