{
  "name": "zeit.web",
  "version": "0.5.0",
  "description": "zeit web component",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^8.6.4",
    "es6-promise": "^4.2.4",
    "eslint": "^5.0.1",
    "eslint-config-jquery": "^1.0.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "exports-loader": "^0.7.0",
    "expose-loader": "^0.7.5",
    "flag-icon-css": "^3.0.0",
    "imports-loader": "^0.8.0",
    "jquery": "^1.12.4",
    "jquery-inview": "^1.1.2",
    "jshint": "^2.9.5",
    "jshint-loader": "^0.8.4",
    "livereload": "^0.7.0",
    "masonry-layout": "^4.2.1",
    "modernizr": "^3.6.0",
    "mustache-loader": "^1.4.0",
    "node-sass": "^4.9.0",
    "nodemon": "^1.17.5",
    "normalize.css": "^8.0.0",
    "npm-run-all": "^4.1.3",
    "picturefill": "^3.0.2",
    "postcss-cli": "^5.0.1",
    "requirejs": "^2.3.5",
    "script-loader": "^0.7.2",
    "svg-sprite": "^1.4.0",
    "svgo": "^1.0.5",
    "velocity-animate": "^1.5.1",
    "webpack": "^4.12.2",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^3.0.8"
  },
  "scripts": {
    "clean:legacy": "rm -rf javascript/vendor",
    "clean:css": "rm -rf src/zeit/web/static/css",
    "clean:js": "rm -rf src/zeit/web/static/js",
    "clean:svg": "rm -rf src/zeit/web/static/images/svg",
    "clean": "npm-run-all --parallel clean:*",
    "modernizr": "modernizr -c modernizr-config.json -d javascript/web.core/vendor/modernizr-custom.js --quiet",
    "jshint": "jshint javascript",
    "eslint": "eslint javascript --fix",
    "lint": "npm run jshint --silent & npm run eslint --silent",
    "livereload": "livereload 'src/zeit/web/static/css, src/zeit/web/static/js' -d",
    "postcss": "postcss -u autoprefixer -r 'src/zeit/web/static/css/**/*.css'",
    "sass": "node-sass --include-path sass --include-path node_modules sass/ -o src/zeit/web/static/css/",
    "sass:dev": "npm run sass -- --output-style expanded --source-map true --source-map-root ${PWD}/src/zeit/web/static/css/web",
    "sass:dist": "npm run sass -- --output-style compressed --quiet",
    "postsass:dev": "npm run postcss",
    "postsass:dist": "npm run postcss -- --no-map",
    "watch:livereload": "npm run livereload",
    "watch:svg": "nodemon --watch sass --ext svg -C --exec 'npm run svg'",
    "watch:js": "npm run webpack -- --watch",
    "watch:sass": "npm run sass:dev -- -w",
    "xatch:postcss": "npm run postcss -- -w",
    "watch": "npm-run-all --parallel --silent watch:*",
    "svg:flags-wm": "mkdir -p src/zeit/web/static/images/svg/flags/ && cp -r node_modules/flag-icon-css/flags/4x3/. src/zeit/web/static/images/svg/flags",
    "svgo:arbeit": "svgo -q --config=svgo.json -f sass/web.arbeit/svg -o src/zeit/web/static/css/svg/web.arbeit",
    "svgo:campus": "svgo -q --config=svgo.json -f sass/web.campus/svg -o src/zeit/web/static/css/svg/web.campus",
    "svgo:magazin": "svgo -q --config=svgo.json -f sass/web.magazin/svg -o src/zeit/web/static/css/svg/web.magazin",
    "svgo:site": "svgo -q --config=svgo.json -f sass/web.site/svg -o src/zeit/web/static/css/svg/web.site",
    "svg:sprite:amp:campus": "npm run svg:sprite -- --svg-xmldecl false --symbol-sprite 'web.campus/amp.svg' 'sass/web.campus/svg-amp/*.svg'",
    "svg:sprite:amp:magazin": "npm run svg:sprite -- --svg-xmldecl false --symbol-sprite 'web.magazin/amp.svg' 'sass/web.magazin/svg-amp/*.svg'",
    "svg:sprite:amp:site": "npm run svg:sprite -- --svg-xmldecl false --symbol-sprite 'web.site/amp.svg' 'sass/web.site/svg-amp/*.svg'",
    "svg:sprite:framebuilder:campus": "npm run svg:sprite -- --symbol-sprite 'web.campus/framebuilder.svg' 'sass/web.campus/svg-framebuilder/*.svg'",
    "svg:sprite:framebuilder:site": "npm run svg:sprite -- --symbol-sprite 'web.site/framebuilder.svg' 'sass/web.site/svg-framebuilder/*.svg'",
    "svg:sprite": "svg-sprite --config svg-sprite.json --shape-transform-svgo svgo.json",
    "presvg": "rm -rf src/zeit/web/static/css/svg/* && mkdir -p src/zeit/web/static/css/svg/web.arbeit src/zeit/web/static/css/svg/web.campus src/zeit/web/static/css/svg/web.magazin src/zeit/web/static/css/svg/web.site",
    "svg": "npm-run-all --parallel svgo:* svg:sprite:*:* svg:flags-wm",
    "prejs": "npm run lint",
    "js": "npm run webpack:dist",
    "webpack:analyzer": "webpack-bundle-analyzer webpack-stats.json src/zeit/web/static/js",
    "webpack:profile": "webpack --mode development --profile --json > webpack-stats.json",
    "webpack:analyze": "npm-run-all webpack:profile webpack:analyzer",
    "webpack": "webpack --mode development",
    "webpack:dist": "webpack -p --mode production",
    "webpack:dev": "webpack -d --mode development --display-modules",
    "prebuild": "npm run clean",
    "build": "NODE_ENV=production npm-run-all --parallel sass:dist js svg",
    "postinstall": "npm prune --no-save"
  },
  "browserslist": [
    "Chrome >= 35",
    "Firefox >= 30",
    "Edge >= 12",
    "Explorer >= 9",
    "iOS >= 7",
    "Safari >= 8",
    "Android 2.3",
    "Android >= 4",
    "Opera >= 12"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ZeitOnline/zeit.web.git"
  }
}
