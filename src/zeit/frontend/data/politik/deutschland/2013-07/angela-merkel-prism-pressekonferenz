  <rankedTags><tag url_value="angela-merkel" uuid="6698fedd-b573-4b9e-9587-839683bebc28" score="10" type="Person">Angela Merkel</tag><tag url_value="bundesregierung" uuid="5943323b-adb4-4cfa-b604-f66a88eb0620" score="9" type="Organization">Bundesregierung</tag><tag url_value="thomas-de-maizi%C3%A8re" uuid="5b6e10e0-1481-43b9-8cab-1063607a4460" score="7" type="Person">Thomas de Maizière</tag><tag url_value="hans-peter-friedrich" uuid="e4598182-697a-41c1-90b8-5d2124605cd3" score="6" type="Person">Hans-Peter Friedrich</tag><tag url_value="prism" uuid="7c31cf4c-fa1d-4526-978a-4ba187d5da0d" score="5" type="topic">Prism</tag><tag url_value="asyl" uuid="1f68751d-9938-4737-b150-95c265cf00f7" score="4" type="free">Asyl</tag><tag url_value="auswaertiges-amt" uuid="94ad1f40-967b-49fb-ba0f-8a16dfc8ff7b" score="4" type="Organization">Auswärtiges Amt</tag><tag url_value="bundesinnenministerium" uuid="4e4fbfc0-59c2-4a4d-b26a-775dee2850a8" score="4" type="free">Bundesinnenministerium</tag><tag url_value="datenschutz" uuid="42624787-c068-4f31-87bc-91675967dbfe" score="4" type="free">Datenschutz</tag><tag url_value="entfuehrung" uuid="b8684c0b-b826-4728-a37f-9a40787efefd" score="4" type="free">Entführung</tag><tag url_value="euro-krise" uuid="d8ff0b97-34bc-442b-b694-191786077519" score="4" type="free">Euro-Krise</tag><tag url_value="freundschaft" uuid="e0d5b438-f10f-4eb2-8a5b-fd6a34227200" score="4" type="free">Freundschaft</tag><tag url_value="it-sicherheit" uuid="50057f2b-492a-46fb-b0db-41e36e9cf96f" score="4" type="free">IT-Sicherheit</tag><tag url_value="sicherheitstechnik" uuid="ee3b3f4b-c563-444b-9de1-d42ffcb5852b" score="4" type="free">Sicherheitstechnik</tag><tag url_value="verteidigungsminister" uuid="a90c57c7-6c40-4001-b341-e6b0d9cf0e0e" score="4" type="free">Verteidigungsminister</tag><tag url_value="volker-beck" uuid="ed3ae263-a54c-4c5b-a6ea-7a5e16c0be5e" score="4" type="Person">Volker Beck</tag><tag url_value="afghanistan" uuid="9187d28e-ea51-4485-b2d6-d5d3852f309c" scor