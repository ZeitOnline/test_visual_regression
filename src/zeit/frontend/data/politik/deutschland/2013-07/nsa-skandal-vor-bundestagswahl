  <rankedTags><tag url_value="angela-merkel" uuid="6698fedd-b573-4b9e-9587-839683bebc28" score="8" type="Person">Angela Merkel</tag><tag url_value="bundesregierung" uuid="5943323b-adb4-4cfa-b604-f66a88eb0620" score="6" type="Organization">Bundesregierung</tag><tag url_value="aufklaerung" uuid="31251156-898e-4f78-a66f-b4bfbd21149d" score="4" type="free">Aufklärung</tag><tag url_value="geheimdienst" uuid="873d5929-08f3-4cb5-8c3b-aa233005cbd8" score="4" type="free">Geheimdienst</tag><tag url_value="hans-peter-friedrich" uuid="e4598182-697a-41c1-90b8-5d2124605cd3" score="4" type="Person">Hans-Peter Friedrich</tag><tag url_value="innenminister" uuid="05da8430-80cf-4036-adb0-5da9d442b292" score="4" type="free">Innenminister</tag><tag url_value="minister" uuid="6753ad3b-3aa0-4cc3-97c3-d242c5de374e" score="4" type="free">Minister</tag><tag url_value="rechtsstaat" uuid="c058570f-33d9-419f-aa4d-465fe4518856" score="4" type="free">Rechtsstaat</tag><tag url_value="republik" uuid="f72db50b-7b77-4f05-9083-dd00aed0a3b0" score="4" type="free">Republik</tag><tag url_value="tagesspiegel" uuid="034c6bc1-ea5e-4e0e-a302-80ea616ef9ab" score="4" type="free">Tagesspiegel</tag><tag url_value="us-regierung" uuid="2554f04f-cef7-4c37-8eb8-581ba5b75b0a" score="4" type="free">US-Regierung</tag><tag url_value="verfassung" uuid="30e52aaf-093d-46ee-918b-e21ca1a0749e" score="4" type="free">Verfassung</tag><tag url_value="verteidigungsminister" uuid="a90c57c7-6c40-4001-b341-e6b0d9cf0e0e" score="4" type="free">Verteidigungsminister</tag><tag url_value="wahlkampf" uuid="83c6adec-c208-4adc-81ba-807b8992ff56" score="4" type="free">Wahlkampf</tag><tag url_value="zivilcourage" uuid="fc8cb7f0-84e3-4644-a658-da8f33ddac82" score="4" type="free">Zivilcourage</tag><tag url_value="bundesrepublik-deutschland" uuid="acf1e046-cbd4-4035-81ff-5813dbe35149" score="3" type="Location">Bundesrepublik Deutschland</tag><tag url_value="mit" uuid="c503e81c-df84-4606-98e4-a3ba97db8b07" score="3" type="Organization">MIT</tag><