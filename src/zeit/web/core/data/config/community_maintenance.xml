<!-- Achtung:
     Die Wartungseinstellungen werden gecached. Wird die Konfiguration kurzfristig
     veröffentlicht muss der Cache invalidiert werden.
     Hierzu `http://friedbert01.zeit.de:8080/-comments/invalidate_maintenance` aufrufen. -->
<community_maintenance>
            <!-- Überschreibt, wenn `true`, den aus der Planung abgeleiteten Wartungszustand -->
            <active>true</active>

            <!-- Wartungszustand planen: 
                 - Warnhinwies wird ausgespielt, solange die Wartung noch nicht aktiv ist
                 - Im Wartungszeitraum wird die Wartung automatisch aktiviert -->
            <scheduled>true</scheduled>
            <begin>2010-10-10T10:10:10.10+00:00</begin>
            <end>2020-10-10T10:10:10.10+00:00</end>

            <!-- Text für geplante Wartung (leerer Knoten zeigt einen
                 voreingestellten Text an) -->
            <text_scheduled></text_scheduled>

            <!-- Text für aktive Wartung (leerer Knoten zeigt einen
                 voreingestellten Text an) -->
            <text_active>text_active</text_active>
</community_maintenance>
