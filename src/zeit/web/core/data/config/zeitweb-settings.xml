<?xml version="1.0"?>
<settings
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <!-- Supported types: xsd:string, xsd:int, xsd:double -->

  <setting name="author_articles_page_size" xsi:type="xsd:int">10</setting>
  <setting name="author_comment_page_size" xsi:type="xsd:int">6</setting>
  <setting name="author_articles_query" xsi:type="xsd:string">author:"{}" AND (type:article OR type:video OR type:link OR type:gallery)</setting>

  <setting name="default_teaser_images" xsi:type="xsd:string">http://xml.zeit.de/zeit-magazin/default/teaser_image</setting>
  <setting name="default_teaser_image_zar" xsi:type="xsd:string">http://xml.zeit.de/arbeit/default/teaser_image/yellow</setting>
  <setting name="default_packshot_diezeit" xsi:type="xsd:string">http://xml.zeit.de/ausgabe/default_packshot_diezeit</setting>

  <setting name="paywall_premium_product_digitalonly" xsi:type="xsd:string">https://premium.zeit.de/bestellung/1579642</setting>
  <setting name="paywall_premium_product_digitalandprint" xsi:type="xsd:string">https://premium.zeit.de/bestellung/1596805</setting>
  <setting name="paywall_premium_redirect" xsi:type="xsd:string">https://premium.zeit.de/abo/paywall</setting>

  <setting name="breaking_news_timeout" xsi:type="xsd:int">7200</setting>

  <setting name="script_timeout" xsi:type="xsd:int">2000</setting>

  <!-- Use this setting to determine wheter or not an paragraph should be
       considered for ad places. The number represents the number of
       characters in the paragraph. -->
  <setting name="sufficient_paragraph_length" xsi:type="xsd:int">200</setting>

  <setting name="comment_page_size" xsi:type="xsd:int">4</setting>
  <setting name="community_host_timeout_secs" xsi:type="xsd:int">10</setting>
  <setting name="community_profile_url" xsi:type="xsd:string">https://community.zeit.de</setting>

  <setting name="mailjet_timeout" xsi:type="xsd:int">1</setting>
  <setting name="mailjet_sender" xsi:type="xsd:string">zon-backend@zeit.de</setting>

  <setting name="podigee_timeout" xsi:type="xsd:int">1</setting>

  <setting name="retresco_timeout" xsi:type="xsd:double">0.2</setting>

  <setting name="reach_timeout" xsi:type="xsd:double">0.2</setting>

  <setting name="cp_preserve_modules_on_pagination" xsi:type="xsd:string">headerimage centerpage-header search-form authorlist-alphabet-pager</setting>

  <setting name="caching_time_content" xsi:type="xsd:int">5</setting>
  <setting name="caching_time_article" xsi:type="xsd:int">10</setting>
  <setting name="caching_time_centerpage" xsi:type="xsd:int">20</setting>
  <setting name="caching_time_feed" xsi:type="xsd:int">25</setting>
  <setting name="caching_time_gallery" xsi:type="xsd:int">40</setting>
  <setting name="caching_time_image" xsi:type="xsd:int">30</setting>
  <setting name="caching_time_videostill" xsi:type="xsd:int">35</setting>
  <setting name="caching_time_external" xsi:type="xsd:int">15</setting>

  <!-- overscrolling settings -->
  <setting name="overscrolling_active" xsi:type="xsd:boolean">true</setting>
  <!-- homepage hp overlay settings -->
  <setting name="hp_overlay_active" xsi:type="xsd:boolean">true</setting>
  <!-- homepage hp overlay interval, in seconds -->
  <setting name="hp_overlay_interval" xsi:type="xsd:int">78</setting>
  <!-- updateSignals settings, reminder on/off is now a feature toggle -->
  <!-- homepage update signals interval, in seconds -->
  <setting name="update_signals_comments_interval" xsi:type="xsd:int">20</setting>
  <setting name="update_signals_time_interval" xsi:type="xsd:int">60</setting>
   <!-- Use this nonsense Hosts for test purposes. -->
  <setting name="newsletter_image_host" xsi:type="xsd:string">http://imgtest.zeit.de</setting>
  <setting name="newsletter_content_host" xsi:type="xsd:string">http://www.zeittest.de</setting>

  <setting name="asset_prefix" xsi:type="xsd:string">/static/latest</setting>
  <!-- needs https://static.zeit.de/static/{version} in production and staging -->
  <setting name="ssl_asset_prefix" xsi:type="xsd:string">/static/latest</setting>
  <setting name="image_prefix" xsi:type="xsd:string"></setting>
  <setting name="jsconf_prefix" xsi:type="xsd:string">/config</setting>
  <setting name="fbia_prefix" xsi:type="xsd:string">/fbia</setting>
  <setting name="c1_prefix" xsi:type="xsd:string">/config</setting>
  <setting name="series_prefix" xsi:type="xsd:string">http://xml.zeit.de/serie</setting>
  <setting name="topic_prefix" xsi:type="xsd:string">http://xml.zeit.de/thema</setting>
  <!-- Do not use in other contexts than framebuilders useSSL variant, has no local testing alternative -->
  <setting name="framebuilder_ssl_asset_prefix" xsi:type="xsd:string">https://ssl.zeit.de/www.zeit.de/static/latest</setting>
  <setting name="volume_navigation_base" xsi:type="xsd:string">https://premium.zeit.de/abo/diezeit/%s/%02d</setting>
  <setting name="webtrekk_version" xsi:type="xsd:string">4.3.1</setting>
  <setting name="webtrekk_id" xsi:type="xsd:string">674229970930653</setting>

  <!--Comma separated list of fqdns.-->
  <!--All links will be transformed to https.-->
  <setting name="transform_to_secure_links_for" xsi:type="xsd:string">www.zeit.de,blog.zeit.de</setting>

  <setting name="varnish_caching_time_content" xsi:type="xsd:int">3600</setting>
  <setting name="varnish_caching_time_sitemap" xsi:type="xsd:int">0</setting>

  <setting name="entry_service" xsi:type="xsd:string">sonstige</setting>

  <!-- Videoplayer Settings, use different players on dev, staging and production -->
  <!-- videoplayer_hp production: 65fa926a-0fe0-4031-8cbf-9db35cecf64a -->
  <setting name="brightcove_videoplayer_hp_cp_single" xsi:type="xsd:string">B1l1tOGXYe</setting>
  <!-- videoplayer_hp_wo_ads production: r1xb937iwZ -->
  <setting name="brightcove_videoplayer_hp_cp_single_wo_ads" xsi:type="xsd:string">HklODaQiwb</setting>
  <!-- videoplayer_article production: c09a3b98-8829-47a5-b93b-c3cca8a4b5e9 -->
  <setting name="brightcove_videoplayer_article" xsi:type="xsd:string">rJzskUVKx</setting>
  <!-- videoplayer_article_wo_ads production: NykzeyfYg  -->
  <setting name="brightcove_videoplayer_article_wo_ads" xsi:type="xsd:string">SJENxUNKe</setting>

  <!-- Standard Facebook Page IDs  -->
  <setting name="facebook_app_id_list" xsi:type="xsd:string">37816894428, 63948163305, 327602816926, 114803848589834</setting>

  <!-- podcast player -->
  <setting name="podcast_theme_cp" xsi:type="xsd:string">zon-standalone</setting>
  <setting name="podcast_theme_article_body" xsi:type="xsd:string">zon-standalone</setting>
  <setting name="podcast_theme_article_header" xsi:type="xsd:string">zon-minimal</setting>

  <!-- To enable, insert path to optimizely Script (//cdn.optimizely.com/js/281825380.js).
  To disable, use empty string. Do NOT use "false". -->
  <setting name="optimizely_on_zon_homepage" xsi:type="xsd:string"></setting>
  <setting name="optimizely_on_zon_centerpage" xsi:type="xsd:string"></setting>
  <setting name="optimizely_on_zon_article" xsi:type="xsd:string"></setting>

</settings>
